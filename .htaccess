
# Activation du moteur de réécriture
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirection HTTP vers HTTPS (commenté pour le développement local)
  # RewriteCond %{HTTPS} off
  # RewriteCond %{REQUEST_URI} !^/\.well-known/acme-challenge/
  # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # SPA routing - rediriger toutes les requêtes vers index.html
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# Activer CORS - Extended configuration for all origins
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
  Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization, x-client-info, apikey"
  Header set Access-Control-Max-Age "3600"
  
  # Handle OPTIONS method for CORS preflight
  RewriteEngine On
  RewriteRule ^(.*)$ $1 [E=HTTP_ORIGIN:%{HTTP:ORIGIN}]
  RewriteRule ^(.*)$ $1 [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
  RewriteRule ^(.*)$ $1 [E=HTTP_ACCEPT:%{HTTP:ACCEPT}]
  RewriteRule ^(.*)$ $1 [E=HTTP_X_REQUESTED_WITH:%{HTTP:X-Requested-With}]
  
  RewriteCond %{REQUEST_METHOD} OPTIONS
  RewriteRule ^(.*)$ $1 [R=200,L,E=HTTP_CONTENT_TYPE:%{HTTP:Content-Type}]
  
  Header set Content-Type "text/html; charset=UTF-8"
</IfModule>

# Types MIME appropriés
<IfModule mod_mime.c>
  # JavaScript
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/javascript .jsx
  AddType application/javascript .ts
  AddType application/javascript .tsx
  
  # CSS
  AddType text/css .css
  
  # HTML
  AddType text/html .html .htm
  
  # JSON
  AddType application/json .json
</IfModule>

# Contrôle du cache
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  
  # Ne pas mettre en cache les fichiers HTML, JS, et CSS pour le développement
  <FilesMatch "\.(html|htm|js|jsx|ts|tsx|json|css)$">
    ExpiresDefault "access plus 0 seconds"
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
  </FilesMatch>
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Gestion des erreurs 404
ErrorDocument 404 /index.html

