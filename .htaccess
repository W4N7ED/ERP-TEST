
# Redirection HTTP vers HTTPS
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} off
  # Ne pas rediriger les requêtes pour les validations Let's Encrypt
  RewriteCond %{REQUEST_URI} !^/\.well-known/acme-challenge/
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Enable CORS
Header set Access-Control-Allow-Origin "*"

# Proper MIME type for JavaScript modules
AddType text/javascript .js
AddType text/javascript .mjs
AddType text/javascript .jsx
AddType text/javascript .tsx
AddType text/javascript .ts

# Proper MIME type for CSS
AddType text/css .css

# Proper MIME type for HTML
AddType text/html .html .htm

# Proper MIME type for JSON
AddType application/json .json

# Cache control
<FilesMatch "\.(html|htm|js|jsx|ts|tsx|json|css)$">
  Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
  Header set Pragma "no-cache"
  Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
</FilesMatch>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Handle 404 errors
ErrorDocument 404 /index.html

# SPA routing
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# Explicitly set MIME types for TypeScript files
<IfModule mod_mime.c>
  AddHandler application/javascript .js
  AddHandler application/javascript .jsx
  AddHandler application/javascript .ts
  AddHandler application/javascript .tsx
</IfModule>

# Headers de sécurité (uniquement pour HTTPS)
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "DENY"
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>
